<!DOCTYPE html>
<html lang="{{ lang }}">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>

    <link rel="stylesheet" href="/assets/css/common.css">
    <link rel="stylesheet" href="/assets/css/projects.css">

</head>

<body>

    {% include "header.liquid" %}

    <main class="container">
        <h1>{{ title }}</h1>

        <section>

        {%- capture collectionKey -%}{{ lang }}_projects{%- endcapture -%}
        {% for item in collections[collectionKey] %}
                <article id="{{ item.page.fileSlug }}" class="project {{ item.data.thumbnail_orientation }}">
                    {% if item.data.showcase %}
                        <a href="{{ item.data.showcase }}" target="_blank">
                            <img src="{{ item.data.thumbnail }}" alt="{{ item.data.title }}">
                        </a>
                    {% else %}
                        <img src="{{ item.data.thumbnail }}" alt="{{ item.data.title }}">
                    {% endif %}
                    <div>
                        <h2> {{ item.data.title }} </h2>
                        
                        <div class="links">
                            {% if item.data.try_it %}
                            <a href="{{ item.data.try_it }}" target="_blank">{{ t[lang].try_it }}</a>
                            {% endif %}
                            {% if item.data.github_url %}
                            <a href="{{ item.data.github_url }}" target="_blank">GitHub Repo</a>
                            {% endif %}
                        </div>
                        
                        <p>
                            {{ item.data.description }}
                        </p>

                        {% if item.data.try_it %}
                        <a href="{{ item.data.try_it }}" class="button primary" target="_blank">{{ t[lang].try_it }}</a>
                        {% endif %}
                        <a href="{{ item.url | locale_url}}" class="button neutral">{{ t[lang].learn_more}}</a>
                    </div>
                </article>
                <hr style="margin-block: 1rem;">
        {% endfor %}
        </section>
    </main>

    {% include "footer.liquid" %}
</body>

</html>
